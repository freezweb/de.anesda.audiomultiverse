{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AudioMultiverse Remote",
  "version": "0.1.0",
  "identifier": "de.anesda.audiomultiverse.remote",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5174",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "minHeight": 400,
        "minWidth": 320,
        "resizable": true,
        "title": "AudioMultiverse Remote",
        "width": 480
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "© 2024 Anesda",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.icns"
    ],
    "longDescription": "Remote-Steuerung für AudioMultiverse Mixer-Server",
    "shortDescription": "AudioMultiverse Remote",
    "targets": "all",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "entitlements": null,
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "android": {
      "minSdkVersion": 24
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
